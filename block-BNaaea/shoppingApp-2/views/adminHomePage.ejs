<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('./include/header'); -%>
    <div class="container">
      <section class="admin_home">
        <h3 class="">Welcome To Admin Dashboard</h3>
        <div>
          <a href="/admin/product/list" class="btn btn_primary"
            >List of all Products</a
          >
        </div>
        <div>
          <a href="/admin/product/new" class="btn btn_primary"
            >Add new Product</a
          >
        </div>
        <div>
          <a href="/admin/product/list/category" class="btn btn_primary">
            List of categories
          </a>
        </div>
      </section>

      <section class="list">
        <ul class="p-5 m-10">
          <h2 class="text-xl font-medium text-yellow-700">
            List of Registered Users
          </h2>
          <% users.forEach(user => { %>
          <li><%= user.fullName %></li>
          <% }) %>
        </ul>
        <ul class="p-5 m-10">
          <h2 class="text-xl font-medium text-yellow-700">List of Products</h2>
          <% products.forEach(product => { %>
          <li>
            <a href="/admin/product/details/<%= product.id  %>"
              ><%= product.name %></a
            >
          </li>
          <% }) %>
        </ul>
      </section>
    </div>
    <%- include('./include/footer'); -%>
  </body>
</html>
